<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>SupprimerDemande</servlet-name>
        <servlet-class>org.Servlet.SupprimerDemande</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmerDemande</servlet-name>
        <servlet-class>org.Servlet.ConfirmerDemande</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RefuserDemande</servlet-name>
        <servlet-class>org.Servlet.RefuserDemande</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SupprimerAnimation</servlet-name>
        <servlet-class>org.Servlet.SupprimerAnimation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjouterAnimation</servlet-name>
        <servlet-class>org.Servlet.AjouterAnimation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifierAnimation</servlet-name>
        <servlet-class>org.Servlet.ModifierAnimation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>SupprimerDemande</servlet-name>
        <url-pattern>/SupprimerDemande</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmerDemande</servlet-name>
        <url-pattern>/ConfirmerDemande</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RefuserDemande</servlet-name>
        <url-pattern>/RefuserDemande</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SupprimerAnimation</servlet-name>
        <url-pattern>/SupprimerAnimation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjouterAnimation</servlet-name>
        <url-pattern>/AjouterAnimation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifierAnimation</servlet-name>
        <url-pattern>/ModifierAnimation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
